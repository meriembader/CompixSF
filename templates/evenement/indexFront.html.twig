                <td>
                  <a  href="{{ path('ticket_new', {'id_evenement': evenement.id}) }}" class="filled-button">Acheter ticket</a>
                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
